<%= form_for :tacos, url: taco_heaven_path do |f| %>
  <table>
    <tr>
      <th>&nbsp;</th>
      <th>Taco:
    </tr>
  <% @tacos.each do |taco| %>
    <tr>
      <td>
        <%=  check_box_tag "taco_ids[]", taco.id %>
        <%= taco.name  %>
      </td>
    </tr>
  <% end %>
    <tr>
      <th>&nbsp;</th>
      <th>Salsa:
    </tr>
  <% @salsas.each do |salsa| %>
    <tr>
      <td>
        <%=  check_box_tag  "salsa_ids[]", salsa.id %>
        <%= salsa.name  %>
      </td>
    </tr>
  <% end %>
  <tr>
    <td><br /></td>
  </tr>
  <tr>
    <th>&nbsp;<%= f.submit "Search" %></th>
  </tr>
<% end %>
  </table>      
